<div class="container">
<div class="center">
  <h2>YOUR PURCHASE HISTORY</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Seller</th>
    <th class="center">Date Purchased</th>
    <th class="center">Address</th>
  </tr>

  <% unless @orders.blank? %> 
  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class="center"><%= order.listing.name %></td>
      <td class="center"><%= number_to_currency(order.listing.price,:unit=>'â‚¬') %></td>
      <td class="center"><%= order.seller.name %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td class="center"><%= order.address %></td>
    </tr>
  <% end %>
  <% end %>
</table>

<br><br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-warning", data: { no_turbolink: true } %>
  <br><br>

<% end %>
</div>