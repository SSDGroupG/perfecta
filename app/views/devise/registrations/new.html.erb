<div class="row">
 <div class="col-md-6">
  <h2>SIGN UP</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, autofocus: true, class: "form-control" %><br><br>
</div>

<div class="form-group">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, class: "form-control" %><br><br>
</div>
  
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" , placeholder: "This will be your User Name" %> <br><br>
  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.email_field :email, class: "form-control" %><br><br>
  </div>
  <div class="form-group">
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "form-control" %><br><br>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, class: "form-control" %><br><br>
  </div>

  <div class="form-group"><br>
    <%= form.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
 
<%= render "devise/shared/links" %>
</div>
<div class="col-md-6">
  <br>
    <div class="thumbnail">
      	<%=image_tag("signup.jpg")%>
    </div>
</div>
  
</div>

<br>
<br>